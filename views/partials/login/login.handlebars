<!-- Modal Structure Login -->
<div class="createAccount">
    <div id="modal2" class="modal">
        <div class="modal-content">
            <h4>Login</h4>
            <!-- Create an Account Form -->
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="usernameLogin" class="materialize-textarea" data-length="15"></textarea>
                            <label for="textarea2">Username</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="passwordLogin" type="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#!" id="submitLogin" class="modal-close waves-effect waves-green btn-flat">Login</a>
            </div>
        </div>
    </div>
</div>