{{>sidenav/sidenav}}
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col l6 offset-l2">
        {{!-- Header --}}
        <h1>TheraTune</h1>
        <form class="clearfix mb-4 searchForm" action="POST">
          <div class="form-group">
            <div class="input-field col s12">
              {{!-- Select an Emotion --}}
              <select>
                <option value="" disabled selected>I'm Feeling...</option>
                <option value="sad">Sad</option>
                <option value="happy">Happy</option>
                <option value="mad">Mad</option>
              </select>
            </div>
            <div class="input-field col s12">
              {{!-- Search By Artist --}}
              <input id="searchArtist" type="text">
              <label for="searchArtist">Search by Artist</label>
            </div>
          </div>
          {{!-- Search Button --}}
          <button id="submitArtist" class="btn btn-primary float-right">Search</button>
        </form>
      </div>
      <div class="col l1">
        <div class="card">
          <div class="card-content">
            <span class="card-title">Login Here</span>
              <p id="welcome"></p>
          </div>
          <div class="card-action">
		        <a class="waves-effect waves-light modal-trigger login" href="#modal2">Login</a>
            <a class="waves-effect waves-light modal-trigger" href="#modal1">Create</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col l6 offset-l2">
        <div id="resultsArea">{{!-- Display Results Here --}}</div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
