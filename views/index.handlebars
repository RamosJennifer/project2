<div id="home">
  <div class="container">
    <div class="row">
      <div class="col l8 offset-2">
        {{!-- Header --}}
        <h1>TheraTune</h1>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label>I'm Feeling...</label>
            <div class="input-field col s12">
              {{!-- Select --}}
              <select>
                <option value="" disabled selected>Choose your playlist</option>
                <option value="sad">Sad</option>
                <option value="happy">Happy</option>
                <option value="mad">Mad</option>
              </select>
            </div>
          </div>
          {{!-- Search Button --}}
          <button id="submit" class="btn btn-primary float-right">Search</button>
        </form>
        <h3>Results:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>